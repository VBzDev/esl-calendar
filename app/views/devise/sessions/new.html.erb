<div class="container w-25">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="border border-2 rounded-4 p-5">

      <div class="fs-1 text-center mb-3">
        <i class="bi bi-calendar-week"></i>
        Reserve Room
      </div>

      <div class="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2 class="fs-2 text-center mb-3">Entrar</h2>

          <div class="field mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>

          <div class="field mt-2">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-2">
              <%= f.check_box :remember_me, class: "form-check-input m-1" %>
              <%= f.label :remember_me, class: "fs-6" %>
            </div>
          <% end %>

          <div class="actions mt-2 mb-2 d-grid gap-2 col-12">
            <%= f.submit "Login", class: "btn btn-primary" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links"%>
      </div>
    </div>
  </div>
</div>