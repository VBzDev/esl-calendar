<div class="container w-25">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="border border-2 rounded-4 p-5">

      <div class="fs-1 text-center mb-3">
        <i class="bi bi-calendar-week"></i>
        Reserve Room
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2 class="fs-2 text-center mb-3">Cadastro</h2>

        <div class="field mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="field mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Senha (MÃ­nimo de #@minimum_password_length caracteres) " %>
        </div>

        <div class="field mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme a Senha" %>
        </div>

        <div class="actions mt-2 mb-2 d-grid gap-2 col-12">
          <%= f.submit "Cadastrar", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="actions">
        <%= link_to "Voltar", :back, class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>